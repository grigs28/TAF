# 生产环境配置示例
# 复制为 .env 并根据实际环境修改

# 生产环境保护设置
PRODUCTION_ENV=true
UNATTENDED_MODE=true

# 磁盘空间检查配置
DISK_CHECK_INTERVAL=30
DISK_CHECK_MAX_RETRIES=20

# 文件扫描超时配置（秒）
FILE_SCAN_TIMEOUT=7200

# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# 内存数据库配置
USE_MEMORY_DB=true
MEMORY_DB_SYNC_BATCH_SIZE=5000
MEMORY_DB_SYNC_INTERVAL=30
MEMORY_DB_MAX_FILES=100000

# 队列配置
DB_QUEUE_MAX_SIZE=5000

# 压缩等待时间配置
COMPRESSION_WARMUP_TIME=150

# 网络超时配置
DINGTALK_TIMEOUT=30
HTTP_REQUEST_TIMEOUT=60

# 监控配置
ENABLE_MONITORING=true
MONITORING_INTERVAL=300

# 自动恢复配置
AUTO_RECOVERY_ENABLED=true
RECOVERY_CHECK_INTERVAL=60

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/tape_backup.log
ENABLE_ERROR_LOG=true